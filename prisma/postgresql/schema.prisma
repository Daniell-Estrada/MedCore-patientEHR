generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client-postgresql"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_POSTGRESQL")
}

enum DiagnosticState {
  ACTIVE
  ARCHIVED
  DELETED
}

enum PrescriptionStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

model Patient {
  id              String            @id @default(uuid())
  medicalHistory  MedicalHistory?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model Diagnostic {
  id                String              @id @default(uuid())
  medicalHistoryId  String
  doctorId          String
  title             String
  description       String
  symptoms          String
  diagnosis         String
  treatment         String
  observations      String?
  prescriptions     String?
  physicalExam      String?
  vitalSigns        String?
  consultDate       DateTime            @default(now())
  nextAppointment   DateTime?
  state             DiagnosticState     @default(ACTIVE)
  customFields      Json?

  documents         DiagnosticDocument[]
  medicalHistory    MedicalHistory      @relation(fields: [medicalHistoryId], references: [id], onDelete: Cascade)
  
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@index([medicalHistoryId])
  @@index([doctorId])
  @@index([consultDate])
}

model DiagnosticDocument {
  id             String   @id @default(uuid())
  diagnosticId   String
  filename       String
  storedFilename String
  filePath       String
  fileType       String
  mimeType       String
  fileSize       Int
  description    String?
  uploadedBy     String
  currentVersion Int      @default(1)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  diagnostic Diagnostic @relation(fields: [diagnosticId], references: [id], onDelete: Cascade)
  versions   DocumentVersion[]

  @@index([diagnosticId])
}

model DocumentVersion {
  id             String   @id @default(uuid())
  documentId     String
  version        Int
  filename       String
  storedFilename String
  filePath       String
  fileType       String
  mimeType       String
  fileSize       Int
  description    String?
  uploadedBy     String
  reason         String?
  createdAt      DateTime @default(now())

  document DiagnosticDocument @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([documentId, version])
  @@index([documentId])
  @@index([version])
}

model MedicalHistory {
  id              String       @id @default(uuid())
  patientId       String       @unique
  createdBy       String
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // Relations
  patient         Patient      @relation(fields: [patientId], references: [id], onDelete: Cascade)
  diagnostics     Diagnostic[]
  prescriptions   Prescription[]

  @@index([patientId])
  @@index([createdBy])
}

model Prescription {
  id                String                @id @default(uuid())
  medicalHistoryId  String
  diagnosticId      String?
  doctorId          String
  patientId         String
  prescriptionDate  DateTime              @default(now())
  validUntil        DateTime?
  status            PrescriptionStatus    @default(ACTIVE)
  notes             String?
  allergies         String[]              @default([])
  
  medicalHistory    MedicalHistory        @relation(fields: [medicalHistoryId], references: [id], onDelete: Cascade)
  medications       PrescriptionMedication[]
  
  createdAt         DateTime              @default(now())
  updatedAt         DateTime              @updatedAt

  @@index([medicalHistoryId])
  @@index([patientId])
  @@index([doctorId])
  @@index([prescriptionDate])
}

model PrescriptionMedication {
  id                String        @id @default(uuid())
  prescriptionId    String
  medicationName    String
  activeIngredient  String
  dosage            String
  frequency         String
  duration          Int
  durationType      String
  instructions      String?
  warnings          String?
  
  prescription      Prescription  @relation(fields: [prescriptionId], references: [id], onDelete: Cascade)
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  @@index([prescriptionId])
}

model PredefinedDiagnostic {
  id                    String   @id @default(uuid())
  code                  String   @unique
  name                  String
  description           String
  commonSymptoms        String
  recommendedTreatment  String
  observations          String?
  category              String
  severity              String
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([category])
  @@index([severity])
}
